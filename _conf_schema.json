{
    "music_platform": {
        "description": "默认使用的音乐平台",
        "hint": "netease:网易云音乐; netease_nodejs:网易云音乐nodejs版本",
        "type": "string",
        "options": [
            "netease",
            "netease_nodejs"
        ],
        "default": "netease"
    },
    "nodejs_base_url": {
        "description": "nodejs服务的api根地址",
        "hint": "如果启用nodejs模块，则需要配置此项",
        "type": "string",
        "default": "http://netease_cloud_music_api:3000"
    },
    "select_mode": {
        "description": "选择模式",
        "hint": "此配置决定搜索歌曲的展示方法：文本模式(text)、 ...",
        "type": "string",
        "default": "text",
        "options": [
            "text"
        ]
    },
    "send_mode": {
        "description": "发送模式",
        "hint": "此配置决定发送歌曲的方式: 卡片模式(card)、语音模式(record)、文本模式(text), 注意卡片模式仅支持aiocqhttp消息平台, 不满足时自动采用可用方式发送歌曲",
        "type": "string",
        "default": "card",
        "options": [
            "text",
            "record",
            "card"
        ]
    },
    "enable_comments": {
        "description": "是否启用评论",
        "hint": "开启后在发送歌曲后附加一条评论",
        "type": "bool",
        "default": true
    },
    "enable_lyrics": {
        "description": "是否启用歌词",
        "hint": "开启后在发送歌曲后附加一张歌曲图片",
        "type": "bool",
        "default": false
    },
    "timeout": {
        "description": "点歌操作的超时时长（秒）",
        "hint": "点歌时用户在此时间内没有进行操作则自动取消点歌",
        "type": "int",
        "slider": {
            "min": 30,
            "max": 300,
            "step": 10
        },
        "default": 30
    },
